{
  "manifest_version": 3,
  "name": "內容農場助手",
  "version": "1.0.0",
  "description": "一鍵擷取網頁內容（閱讀模式）並新增到待處理任務",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
